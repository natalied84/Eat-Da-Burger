<img src="/assets/img/PinClipart.com_report-clipart_174202.png" alt="burger">
<div class="container">
    <h1>Eat-Da-Burger</h1>

    <div class="row">
        <div class="offset-lg-3"></div>
        <div class="col-lg-2">
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="offset-lg-2"></div>
        <div class="col-lg-2">
            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row justify-content-center">
        <form class="create-form">
            <div id="form" class="form-group">
                <input type="text" id="burger-input" name="name">
            </div>
            <div class="row justify-content-center">
                <button type="submit" class="btn btn-danger">Add Burger</button>
            </div>
        </form>
    </div>
    <p>Enter a burger you want to eat then click the "Add Burger" button!</p>

</div>